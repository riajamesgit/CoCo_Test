<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".RegisterActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/RegisterTitle"
        android:text="Sign Up"
        android:textSize="35dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_margin="25dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/firstName"
        android:layout_below="@id/RegisterTitle"
        android:background="#30ffffff"
        android:hint="First name"
        android:textColorHint="@color/white"
        android:layout_margin="10dp"
        android:padding="20dp"
        android:drawableTint="@color/white"
        android:drawableLeft="@drawable/baseline_contact_page_24"
        android:drawablePadding="20dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lastName"
        android:layout_below="@id/firstName"
        android:background="#30ffffff"
        android:textColorHint="@color/white"
        android:hint="Last name"
        android:layout_margin="10dp"
        android:padding="20dp"
        android:drawableTint="@color/white"
        android:drawableLeft="@drawable/baseline_contact_page_24"
        android:drawablePadding="20dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/major"
        android:layout_below="@id/lastName"
        android:background="#30ffffff"
        android:textColorHint="@color/white"
        android:hint="Major"
        android:layout_margin="10dp"
        android:padding="20dp"
        android:drawableTint="@color/white"
        android:drawableLeft="@drawable/baseline_school_24"
        android:drawablePadding="20dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/username"
        android:layout_below="@id/major"
        android:background="#30ffffff"
        android:textColorHint="@color/white"
        android:hint="Username"
        android:layout_margin="10dp"
        android:padding="20dp"
        android:drawableTint="@color/white"
        android:drawableLeft="@drawable/baseline_person_outline_24"
        android:drawablePadding="20dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/email"
        android:layout_below="@id/username"
        android:background="#30ffffff"
        android:textColorHint="@color/white"
        android:hint="Student E-mail Address"
        android:layout_margin="10dp"
        android:padding="20dp"
        android:drawableTint="@color/white"
        android:drawableLeft="@drawable/baseline_email_24"
        android:drawablePadding="20dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/password"
        android:layout_below="@id/email"
        android:background="#30ffffff"
        android:textColorHint="@color/white"
        android:hint="Password"
        android:layout_margin="10dp"
        android:padding="20dp"
        android:drawableTint="@color/white"
        android:drawableLeft="@drawable/baseline_lock_24"
        android:drawablePadding="20dp"/>

    <com.google.android.material.button.MaterialButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/signupbtn"
        android:text="REGISTER"
        android:textSize="20dp"
        android:layout_below="@id/password"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/design_default_color_primary_dark"
        android:layout_margin="20dp"/>
</RelativeLayout>
